<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- <androidx.cardview.widget.CardView
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_gravity="center"
             android:layout_margin="10dp"
             android:background="@color/white"
             android:elevation="5dp"
             android:orientation="vertical"
             app:cardCornerRadius="4dp">-->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgResro"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"/>
        <!--  </androidx.cardview.widget.CardView>-->


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UserName"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtOffer"
                        style="@style/customfontstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_rounded_pinkl"
                        android:gravity="center"
                        android:text="@string/offer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xmedium" />


                    <LinearLayout
                        android:id="@+id/l1Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="4dp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/back_white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtSDate"
                                    style="@style/customfontstyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:text="21-08-2020"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_size_large" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/customfontstyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/start"
                                    android:textColor="@color/grey_40"
                                    android:textSize="@dimen/text_size_xmedium" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/back_white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtEDate"
                                    style="@style/customfontstyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:text="21-08-2020"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_size_large" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/customfontstyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/end"
                                    android:textColor="@color/grey_40"
                                    android:textSize="@dimen/text_size_xmedium" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text="General"
                        android:textAllCaps="true"
                        android:textColor="@color/overlay_dark_60"
                        android:textSize="15dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/personal_details" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtPd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Personal Details"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:id="@+id/ViewAd"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/overlay_dark_30" />

                            <LinearLayout
                                android:id="@+id/l1Ad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/account_details" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtAd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Buy Package"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:id="@+id/viewRv"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/overlay_dark_30" />

                            <LinearLayout
                                android:id="@+id/l1Rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/coupon_r" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtRv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Requested Visit"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text="Others"
                        android:textAllCaps="true"
                        android:textColor="@color/overlay_dark_60"
                        android:textSize="15dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/password" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Password"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/overlay_dark_30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/notifications" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtNotification"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Notifications"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/overlay_dark_30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/about_app" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtAa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="About App"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/overlay_dark_30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_logout" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtLogout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                                    android:padding="4dp"
                                    android:text="Logout"
                                    android:textColor="@color/overlay_dark_80"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>